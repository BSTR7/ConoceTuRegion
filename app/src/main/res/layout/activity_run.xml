<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="672dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="373dp"
            android:layout_height="266dp"
            app:srcCompat="@drawable/conoceturegion" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="368dp"
            android:layout_height="158dp"
            android:text="Conoce Tu Región es una innovadora aplicación diseñada para aquellos que desean explorar y descubrir los tesoros ocultos de la encantadora Región del Maule, Chile. Esta aplicación única te ofrece la oportunidad de sumergirte en la rica cultura, la historia fascinante y los impresionantes paisajes que esta región tiene para ofrecer. Para acceder a todas las maravillas que Conoce Tu Región tiene preparadas, simplemente inicia sesión y deja que la aventura comience." />

        <ImageView
            android:id="@+id/btnsesion"
            android:layout_width="363dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/iniciar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <ImageView
            android:id="@+id/btnsoli"
            android:layout_width="363dp"
            android:layout_height="71dp"
            android:src="@drawable/solicitud"
            tools:srcCompat="@drawable/solicitud" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <ImageView
            android:id="@+id/btnvers"
            android:layout_width="363dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/comentarios" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>